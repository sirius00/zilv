.input-captcha-20190115 {
  min-height: 200px;
}
.input-captcha-20190115 .input-box {
  min-height: 100px;
  box-shadow: 0 0 5px 1px black;
  border-radius: 8px;
  width: 100%;
  max-width: 500px;
  display: inline-block;
  padding: 20px;
  box-sizing: border-box;
  /* 去掉input[type=number]浏览器默认的icon显示 */
}
.input-captcha-20190115 .input-box input {
  vertical-align: middle;
}
.input-captcha-20190115 .input-box + .input-box {
  margin-top: 20px;
}
.input-captcha-20190115 .input-box .simple-input-content label {
  padding: 20px;
}
.input-captcha-20190115 .input-box .simple-input-content ._span {
  vertical-align: middle;
  border: 1px solid silver;
  display: inline-block;
  height: 20px;
  width: 20px;
}
.input-captcha-20190115 .input-box .simple-input-content ._span.highlight {
  border-color: purple;
}
.input-captcha-20190115 .input-box .input-content {
  padding: 20px;
}
.input-captcha-20190115 .input-box .input-content input {
  width: 20px;
  height: 20px;
  text-align: center;
}
.input-captcha-20190115 .input-box input::-webkit-outer-spin-button,
.input-captcha-20190115 .input-box input::-webkit-inner-spin-button {
  -webkit-appearance: none;
  appearance: none;
  margin: 0;
}
.input-captcha-20190115 .input-box input {
  -moz-appearance: textfield;
}

