  font-size: 28rpx;
  width: 100%;
}
.tabbar-container .tabbar-item .item-active {
  color: #f00;
}
.tabbar-container .center-item {
  display: block;
  position: relative;
}
.tabbar-container .center-item .item-top {
  flex-shrink: 0;
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  top: -65rpx;
  left: calc(50% - 70rpx);
}
.tabbar-container .center-item .item-bottom {
  position: absolute;
  bottom: 5rpx;
}
.tabbar-container .center-item .item-active {
  position: absolute;
  bottom: 5rpx;
  color: #1fff;
}


